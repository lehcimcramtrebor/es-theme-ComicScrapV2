<theme>
<formatVersion>7</formatVersion>

<view name="detailed,grid">

	<image name="md_marquee">
		<default>./../noMarquee.png</default>
		<linearSmooth>true</linearSmooth>
		<color>${tint}</color>
		<saturation>1.2</saturation>
		<zIndex>500</zIndex>
		<origin>0.5 0.5</origin>
		<pos>0.65 0.1462962962962963</pos>
		<maxSize>0.185 0.1</maxSize>
	</image>

</view>

<customView name="library">

	<image name="md_marquee" extra="true">
		<visible>false</visible>
	</image>

</customView>

</theme>
