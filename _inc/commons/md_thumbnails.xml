<theme>
<formatVersion>7</formatVersion>

<view name="detailed">

	<image name="md_thumbnail">
		<default>./../noThumb.png</default>
		<linearSmooth>true</linearSmooth>
		<color>${tint}</color>
		<saturation>1.2</saturation>
		<zIndex>700</zIndex>
		<origin>0.5 0.5</origin>
		<pos>0.8791666666666667 0.3625</pos>
		<maxSize>0.134375 0.2342592592592593</maxSize>
		<scale>0.9</scale>
		<roundCorners>0.018</roundCorners>
	</image>

</view>

<view name="grid" ifSubset="gridVideo:yes">

	<image name="md_thumbnail">
		<default>./../noThumb.png</default>
		<linearSmooth>true</linearSmooth>
		<color>${tint}</color>
		<saturation>1.2</saturation>
		<zIndex>490</zIndex>
		<origin>0.5 0.5</origin>
		<roundCorners>0.018</roundCorners>
		<effect>none</effect>	
		<pos>0.8419270833333333 0.4902777777777778</pos>
		<maxSize>0.17 0.32</maxSize>
	</image>

</view>

<customView name="library">

	<image name="md_thumbnail" extra="true">
		<visible>false</visible>
	</image>

</customView>

</theme>
