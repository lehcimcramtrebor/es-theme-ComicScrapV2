<theme>
<formatVersion>7</formatVersion>

<view name="system" ifSubset="groupTiles:no|firstCorner|secondCorner|lastCorner|upperCorners|crossedCorners">

	<image name="31" extra="true" ifSubset="t31:image|thumbnail|fanart|marquee|boxback|custom|imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw|pinkComic|blueComic|redComic|yellowComic|greenComic|purpleComic|fireComic">
		<linearSmooth>true</linearSmooth>

		<origin>0.5 0.5</origin>

		<minSize ifSubset="t31:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw|pinkComic|blueComic|redComic|yellowComic|greenComic|purpleComic|fireComic">${s.31}</minSize>
		<maxSize ifSubset="t31:marquee|marqueeBw">${s.31}</maxSize>

		<pos>${p.31}</pos>

		<scale ifSubset="t31:marquee|marqueeBw">0.8</scale>

		<zIndex>${sti}</zIndex>

		<default ifSubset="t31:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./../../_comicScrapV2Custom/tiles/default/31.png</default>
		<default ifSubset="t31:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./../../_comicScrapV2Custom/tiles/default/31.jpg</default>
		<default ifSubset="t31:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/default/31.png</default>
		<default ifSubset="t31:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/default/31.jpg</default>

		<path ifSubset="t31:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./../../_comicScrapV2Custom/tiles/default/31.png</path>
		<path ifSubset="t31:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./../../_comicScrapV2Custom/tiles/default/31.jpg</path>
		<path ifSubset="t31:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/default/31.png</path>
		<path ifSubset="t31:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/default/31.jpg</path>

		<default ifSubset="t31:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./../../_comicScrapV2Custom/tiles/${system.theme}/31.png</default>
		<default ifSubset="t31:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./../../_comicScrapV2Custom/tiles/${system.theme}/31.jpg</default>
		<default ifSubset="t31:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/31.png</default>
		<default ifSubset="t31:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/31.jpg</default>
		<path ifSubset="t31:image|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">{random:image}</path>

		<path ifSubset="t31:thumbnail|thumbnailBw">{random:thumbnail}</path>

		<path ifSubset="t31:fanart|fanartBw">{random:fanart}</path>

		<path ifSubset="t31:boxback|boxbackBw">{random:fanart}</path>
		<path ifSubset="t31:boxback|boxbackBw">{random:boxback}</path>

		<default ifSubset="t31:marquee|marqueeBw">./defaultMarquee.png</default>
		<path ifSubset="t31:marquee|marqueeBw">{random:marquee}</path>

		<path ifSubset="t31:custom|customBw">{random:fanart}</path>
		<path ifSubset="t31:custom|customBw">./../../_comicScrapV2Custom/tiles/${system.theme}/31.png</path>
		<path ifSubset="t31:custom|customBw">./../../_comicScrapV2Custom/tiles/${system.theme}/31.jpg</path>
		<path ifSubset="t31:custom|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/31.png</path>
		<path ifSubset="t31:custom|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/31.jpg</path>

		<path ifSubset="t31:pinkComic">./11.png</path>
		<path ifSubset="t31:blueComic">./12.png</path>
		<path ifSubset="t31:redComic">./13.png</path>
		<path ifSubset="t31:yellowComic">./14.png</path>
		<path ifSubset="t31:greenComic">./22.png</path>
		<path ifSubset="t31:purpleComic">./21.png</path>
		<path ifSubset="t31:fireComic">./23.png</path>

		<path ifSubset="forceCustomTiles:yes">./../../_comicScrapV2Custom/tiles/${system.theme}/31.png</path>
		<path ifSubset="forceCustomTiles:yes">./../../_comicScrapV2Custom/tiles/${system.theme}/31.jpg</path>
		<path ifSubset="forceCustomTiles:yes">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/31.png</path>
		<path ifSubset="forceCustomTiles:yes">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/31.jpg</path>
		
		<saturation ifSubset="t31:imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
		<color>${tintTiles}</color>

		<opacity ifSubset="t31:marquee|marqueeBw">0</opacity>
		<storyboard repeat="forever" ifSubset="t31:marquee|marqueeBw">
			<animation property="opacity" from="0" to="0" duration="500" mode="linear"/>
			<animation property="opacity" from="0" to="1" duration="350" mode="linear" begin="500"/>
			<animation property="opacity" from="1" to="0" duration="350" mode="linear" begin="9450"/>
			<animation property="scale" from="0.8" to="0.8" duration="10000" mode="linear"/>
		</storyboard>
	</image>

	<image name="31b" extra="true" ifSubset="t31:marquee|marqueeBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<zIndex>${stbi}</zIndex>
		<path>./31.png</path>
		<pos>${p.31}</pos>
		<minSize>${s.31}</minSize>
		<saturation ifSubset="t31:marqueeBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
		<color>${tintTiles}</color>
	</image>

	<video name="v31" extra="true" ifSubset="t31:video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<delay>0.1</delay>
		<effect>none</effect>
		<origin>0.5 0.5</origin>
		<pos>${p.31}</pos>
		<minSize>${s.31}</minSize>
		<zIndex>${sti}</zIndex>
		<audio ifSubset="t31:video|videoBw|videoCustom|videoCustomBw">false</audio>
		<saturation ifSubset="t31:videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>

		<path>{random}</path>

		<path ifSubset="t31:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./../../_comicScrapV2Custom/tiles/${system.theme}/31.mp4</path>
		<path ifSubset="t31:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/31.mp4</path>
		<color>${tintTiles}</color>
	</video>
</view>

</theme>
