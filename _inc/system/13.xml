version: 2.0
author: Lehcim Cram Trebor
inspired by ComicBook theme by TMNTturtleguy at https://github.com/TMNTturtleguy/es-theme-ComicBook
-->

<theme>
<formatVersion>7</formatVersion>

<view name="system" ifSubset="groupTiles:no|firstCorner|thirdCorner|lastCorner|bottomCorners|crossedCorners">

	<image name="13" extra="true" ifSubset="t13:image|thumbnail|fanart|marquee|boxback|custom|imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<linearSmooth>true</linearSmooth>

		<origin>0.5 0.5</origin>

		<minSize ifSubset="t13:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${s.13}</minSize>
		<maxSize ifSubset="t13:marquee|marqueeBw">${s.13}</maxSize>

		<pos>${p.13}</pos>

		<scale ifSubset="t13:marquee|marqueeBw">0.8</scale>

		<zIndex>${sti}</zIndex>

		<default ifSubset="t13:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/13.png</default>
		<default ifSubset="t13:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/13.png</default>
		<default ifSubset="t13:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/13.jpg</default>
		<default ifSubset="t13:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/13.jpg</default>

		<path ifSubset="t13:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/13.png</path>
		<path ifSubset="t13:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/13.png</path>
		<path ifSubset="t13:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/13.jpg</path>
		<path ifSubset="t13:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/13.jpg</path>

		<default ifSubset="t13:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/13.png</default>
		<default ifSubset="t13:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/13.png</default>
		<default ifSubset="t13:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/13.jpg</default>
		<default ifSubset="t13:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/13.jpg</default>
		<path ifSubset="t13:image|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">{random:image}</path>

		<path ifSubset="t13:thumbnail|thumbnailBw">{random:thumbnail}</path>

		<path ifSubset="t13:fanart|fanartBw">{random:fanart}</path>

		<path ifSubset="t13:boxback|boxbackBw">{random:fanart}</path>
		<path ifSubset="t13:boxback|boxbackBw">{random:boxback}</path>

		<default ifSubset="t13:marquee|marqueeBw">./defaultMarquee.png</default>
		<path ifSubset="t13:marquee|marqueeBw">{random:marquee}</path>

		<path ifSubset="t13:custom|customBw">{random:fanart}</path>
		<path ifSubset="t13:custom|customBw">${path.customIn}/tiles/${system.theme}/13.png</path>
		<path ifSubset="t13:custom|customBw">${path.customOut}/tiles/${system.theme}/13.png</path>
		<path ifSubset="t13:custom|customBw">${path.customIn}/tiles/${system.theme}/13.jpg</path>
		<path ifSubset="t13:custom|customBw">${path.customOut}/tiles/${system.theme}/13.jpg</path>
		
		<saturation ifSubset="t13:imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
	</image>

	<image name="13b" extra="true" ifSubset="t13:marquee|marqueeBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<zIndex>${stbi}</zIndex>
		<path>./13.png</path>
		<pos>${p.13}</pos>
		<minSize>${s.13}</minSize>
		<saturation ifSubset="t13:marqueeBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
	</image>

	<video name="v13" extra="true" ifSubset="t13:video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<delay>0.1</delay>
		<effect>none</effect>
		<origin>0.5 0.5</origin>
		<pos>${p.13}</pos>
		<minSize>${s.13}</minSize>
		<zIndex>${sti}</zIndex>
		<audio ifSubset="t13:video|videoBw|videoCustom|videoCustomBw">false</audio>
		<saturation ifSubset="t13:videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>

		<path>{random}</path>

		<path ifSubset="t13:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/13.mp4</path>
		<path ifSubset="t13:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/13.mp4</path>
	</video>
</view>

</theme>
