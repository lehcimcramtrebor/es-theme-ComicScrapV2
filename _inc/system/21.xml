<theme>
<formatVersion>7</formatVersion>

<view name="system" ifSubset="groupTiles:no|secondCorner|lastCorner">

	<image name="21" extra="true" ifSubset="t21:image|thumbnail|fanart|marquee|boxback|custom|imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw|pinkComic|blueComic|redComic|yellowComic|greenComic|purpleComic|fireComic">
		<linearSmooth>true</linearSmooth>

		<origin>0.5 0.5</origin>

		<minSize ifSubset="t21:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw|pinkComic|blueComic|redComic|yellowComic|greenComic|purpleComic|fireComic">${s.21}</minSize>
		<maxSize ifSubset="t21:marquee|marqueeBw">${s.21}</maxSize>

		<pos>${p.21}</pos>

		<scale ifSubset="t21:marquee|marqueeBw">0.8</scale>

		<zIndex>${sti}</zIndex>

		<default ifSubset="t21:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/21.png</default>
		<default ifSubset="t21:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/21.png</default>
		<default ifSubset="t21:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/21.jpg</default>
		<default ifSubset="t21:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/21.jpg</default>

		<path ifSubset="t21:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/21.png</path>
		<path ifSubset="t21:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/21.png</path>
		<path ifSubset="t21:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/21.jpg</path>
		<path ifSubset="t21:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/21.jpg</path>

		<default ifSubset="t21:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/21.png</default>
		<default ifSubset="t21:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/21.png</default>
		<default ifSubset="t21:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/21.jpg</default>
		<default ifSubset="t21:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/21.jpg</default>
		<path ifSubset="t21:image|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">{random:image}</path>

		<path ifSubset="t21:thumbnail|thumbnailBw">{random:thumbnail}</path>

		<path ifSubset="t21:fanart|fanartBw">{random:fanart}</path>

		<path ifSubset="t21:boxback|boxbackBw">{random:fanart}</path>
		<path ifSubset="t21:boxback|boxbackBw">{random:boxback}</path>

		<default ifSubset="t21:marquee|marqueeBw">./defaultMarquee.png</default>
		<path ifSubset="t21:marquee|marqueeBw">{random:marquee}</path>

		<path ifSubset="t21:custom|customBw">{random:fanart}</path>
		<path ifSubset="t21:custom|customBw">${path.customIn}/tiles/${system.theme}/21.png</path>
		<path ifSubset="t21:custom|customBw">${path.customOut}/tiles/${system.theme}/21.png</path>
		<path ifSubset="t21:custom|customBw">${path.customIn}/tiles/${system.theme}/21.jpg</path>
		<path ifSubset="t21:custom|customBw">${path.customOut}/tiles/${system.theme}/21.jpg</path>

		<path ifSubset="t21:pinkComic">./11.png</path>
		<path ifSubset="t21:blueComic">./12.png</path>
		<path ifSubset="t21:redComic">./13.png</path>
		<path ifSubset="t21:yellowComic">./14.png</path>
		<path ifSubset="t21:greenComic">./22.png</path>
		<path ifSubset="t21:purpleComic">./21.png</path>
		<path ifSubset="t21:fireComic">./23.png</path>
		
		<saturation ifSubset="t21:imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
	</image>

	<image name="21b" extra="true" ifSubset="t21:marquee|marqueeBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<zIndex>${stbi}</zIndex>
		<path>./21.png</path>
		<pos>${p.21}</pos>
		<minSize>${s.21}</minSize>
		<saturation ifSubset="t21:marqueeBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
	</image>

	<video name="v21" extra="true" ifSubset="t21:video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<delay>0.1</delay>
		<effect>none</effect>
		<origin>0.5 0.5</origin>
		<pos>${p.21}</pos>
		<minSize>${s.21}</minSize>
		<zIndex>${sti}</zIndex>
		<audio ifSubset="t21:video|videoBw|videoCustom|videoCustomBw">false</audio>
		<saturation ifSubset="t21:videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>

		<path>{random}</path>

		<path ifSubset="t21:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/21.mp4</path>
		<path ifSubset="t21:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/21.mp4</path>
	</video>
</view>

</theme>
