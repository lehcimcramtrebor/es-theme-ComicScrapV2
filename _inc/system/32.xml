version: 2.0
author: Lehcim Cram Trebor
inspired by ComicBook theme by TMNTturtleguy at https://github.com/TMNTturtleguy/es-theme-ComicBook
-->

<theme>
<formatVersion>7</formatVersion>

<view name="system" ifSubset="groupTiles:no|firstCorner|secondCorner|lastCorner|upperCorners|crossedCorners">

	<image name="32" extra="true" ifSubset="t32:image|thumbnail|fanart|marquee|boxback|custom|imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw|pinkComic|blueComic|redComic|yellowComic|greenComic|purpleComic|fireComic">
		<linearSmooth>true</linearSmooth>

		<origin>0.5 0.5</origin>

		<minSize ifSubset="t32:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw|pinkComic|blueComic|redComic|yellowComic|greenComic|purpleComic|fireComic">${s.32}</minSize>
		<maxSize ifSubset="t32:marquee|marqueeBw">${s.32}</maxSize>

		<pos>${p.32}</pos>

		<scale ifSubset="t32:marquee|marqueeBw">0.8</scale>

		<zIndex>${sti}</zIndex>

		<default ifSubset="t32:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/32.png</default>
		<default ifSubset="t32:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/32.png</default>
		<default ifSubset="t32:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/32.jpg</default>
		<default ifSubset="t32:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/32.jpg</default>

		<path ifSubset="t32:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/32.png</path>
		<path ifSubset="t32:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/32.png</path>
		<path ifSubset="t32:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/32.jpg</path>
		<path ifSubset="t32:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/32.jpg</path>

		<default ifSubset="t32:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/32.png</default>
		<default ifSubset="t32:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/32.png</default>
		<default ifSubset="t32:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/32.jpg</default>
		<default ifSubset="t32:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/32.jpg</default>
		<path ifSubset="t32:image|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">{random:image}</path>

		<path ifSubset="t32:thumbnail|thumbnailBw">{random:thumbnail}</path>

		<path ifSubset="t32:fanart|fanartBw">{random:fanart}</path>

		<path ifSubset="t32:boxback|boxbackBw">{random:fanart}</path>
		<path ifSubset="t32:boxback|boxbackBw">{random:boxback}</path>

		<default ifSubset="t32:marquee|marqueeBw">./defaultMarquee.png</default>
		<path ifSubset="t32:marquee|marqueeBw">{random:marquee}</path>

		<path ifSubset="t32:custom|customBw">{random:fanart}</path>
		<path ifSubset="t32:custom|customBw">${path.customIn}/tiles/${system.theme}/32.png</path>
		<path ifSubset="t32:custom|customBw">${path.customOut}/tiles/${system.theme}/32.png</path>
		<path ifSubset="t32:custom|customBw">${path.customIn}/tiles/${system.theme}/32.jpg</path>
		<path ifSubset="t32:custom|customBw">${path.customOut}/tiles/${system.theme}/32.jpg</path>

		<path ifSubset="t32:pinkComic">./11.png</path>
		<path ifSubset="t32:blueComic">./12.png</path>
		<path ifSubset="t32:redComic">./13.png</path>
		<path ifSubset="t32:yellowComic">./14.png</path>
		<path ifSubset="t32:greenComic">./22.png</path>
		<path ifSubset="t32:purpleComic">./21.png</path>
		<path ifSubset="t32:fireComic">./23.png</path>
		
		<saturation ifSubset="t32:imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
		<color>${tintTiles}</color>
	</image>

	<image name="32b" extra="true" ifSubset="t32:marquee|marqueeBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<zIndex>${stbi}</zIndex>
		<path>./32.png</path>
		<pos>${p.32}</pos>
		<minSize>${s.32}</minSize>
		<saturation ifSubset="t32:marqueeBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
		<color>${tintTiles}</color>
	</image>

	<video name="v32" extra="true" ifSubset="t32:video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<delay>0.1</delay>
		<effect>none</effect>
		<origin>0.5 0.5</origin>
		<pos>${p.32}</pos>
		<minSize>${s.32}</minSize>
		<zIndex>${sti}</zIndex>
		<audio ifSubset="t32:video|videoBw|videoCustom|videoCustomBw">false</audio>
		<saturation ifSubset="t32:videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>

		<path>{random}</path>

		<path ifSubset="t32:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/32.mp4</path>
		<path ifSubset="t32:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/32.mp4</path>
		<color>${tintTiles}</color>
	</video>
</view>

</theme>
