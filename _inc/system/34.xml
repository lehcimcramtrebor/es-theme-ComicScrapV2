version: 2.0
author: Lehcim Cram Trebor
inspired by ComicBook theme by TMNTturtleguy at https://github.com/TMNTturtleguy/es-theme-ComicBook
-->

<theme>
<formatVersion>7</formatVersion>

<view name="system" ifSubset="groupTiles:no|firstCorner|secondCorner|thirdCorner|upperCorners|crossedCornersInverse">

	<image name="34" extra="true" ifSubset="t34:image|thumbnail|fanart|marquee|boxback|custom|imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<linearSmooth>true</linearSmooth>

		<origin>0.5 0.5</origin>

		<minSize ifSubset="t34:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${s.34}</minSize>
		<maxSize ifSubset="t34:marquee|marqueeBw">${s.34}</maxSize>

		<pos>${p.34}</pos>

		<scale ifSubset="t34:marquee|marqueeBw">0.8</scale>

		<zIndex>${sti}</zIndex>

		<default ifSubset="t34:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/34.png</default>
		<default ifSubset="t34:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/34.png</default>
		<default ifSubset="t34:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/34.jpg</default>
		<default ifSubset="t34:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/34.jpg</default>

		<path ifSubset="t34:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/34.png</path>
		<path ifSubset="t34:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/34.png</path>
		<path ifSubset="t34:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/34.jpg</path>
		<path ifSubset="t34:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/34.jpg</path>

		<default ifSubset="t34:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/34.png</default>
		<default ifSubset="t34:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/34.png</default>
		<default ifSubset="t34:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/34.jpg</default>
		<default ifSubset="t34:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/34.jpg</default>
		<path ifSubset="t34:image|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">{random:image}</path>

		<path ifSubset="t34:thumbnail|thumbnailBw">{random:thumbnail}</path>

		<path ifSubset="t34:fanart|fanartBw">{random:fanart}</path>

		<path ifSubset="t34:boxback|boxbackBw">{random:fanart}</path>
		<path ifSubset="t34:boxback|boxbackBw">{random:boxback}</path>

		<default ifSubset="t34:marquee|marqueeBw">./defaultMarquee.png</default>
		<path ifSubset="t34:marquee|marqueeBw">{random:marquee}</path>

		<path ifSubset="t34:custom|customBw">{random:fanart}</path>
		<path ifSubset="t34:custom|customBw">${path.customIn}/tiles/${system.theme}/34.png</path>
		<path ifSubset="t34:custom|customBw">${path.customOut}/tiles/${system.theme}/34.png</path>
		<path ifSubset="t34:custom|customBw">${path.customIn}/tiles/${system.theme}/34.jpg</path>
		<path ifSubset="t34:custom|customBw">${path.customOut}/tiles/${system.theme}/34.jpg</path>
		
		<saturation ifSubset="t34:imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
	</image>

	<image name="34b" extra="true" ifSubset="t34:marquee|marqueeBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<zIndex>${stbi}</zIndex>
		<path>./34.png</path>
		<pos>${p.34}</pos>
		<minSize>${s.34}</minSize>
		<saturation ifSubset="t34:marqueeBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
	</image>

	<video name="v34" extra="true" ifSubset="t34:video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<delay>0.1</delay>
		<effect>none</effect>
		<origin>0.5 0.5</origin>
		<pos>${p.34}</pos>
		<minSize>${s.34}</minSize>
		<zIndex>${sti}</zIndex>
		<audio ifSubset="t34:video|videoBw|videoCustom|videoCustomBw">false</audio>
		<saturation ifSubset="t34:videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>

		<path>{random}</path>

		<path ifSubset="t34:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/34.mp4</path>
		<path ifSubset="t34:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/34.mp4</path>
	</video>
</view>

</theme>
