<theme>
<formatVersion>7</formatVersion>

<view name="system">

	<image name="22" extra="true" ifSubset="t22:image|thumbnail|fanart|marquee|boxback|custom|imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">

		<visible ifSubset="t22:themeInclude">false</visible>

		<linearSmooth>true</linearSmooth>

		<origin>0.5 0.5</origin>

		<minSize ifSubset="t22:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${s.22}</minSize>
		<maxSize ifSubset="t22:marquee|marqueeBw">${s.22}</maxSize>

		<pos>${p.22}</pos>

		<scale ifSubset="t22:marquee|marqueeBw">0.8</scale>

		<zIndex>${sti}</zIndex>

		<default ifSubset="t22:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/22.png</default>
		<default ifSubset="t22:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/22.png</default>
		<default ifSubset="t22:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/22.jpg</default>
		<default ifSubset="t22:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/22.jpg</default>

		<path ifSubset="t22:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/22.png</path>
		<path ifSubset="t22:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/22.png</path>
		<path ifSubset="t22:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/22.jpg</path>
		<path ifSubset="t22:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/22.jpg</path>

		<default ifSubset="t22:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/22.png</default>
		<default ifSubset="t22:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/22.png</default>
		<default ifSubset="t22:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/22.jpg</default>
		<default ifSubset="t22:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/22.jpg</default>
		<path ifSubset="t22:image|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">{random:image}</path>

		<path ifSubset="t22:thumbnail|thumbnailBw">{random:thumbnail}</path>

		<path ifSubset="t22:fanart|fanartBw">{random:fanart}</path>

		<path ifSubset="t22:boxback|boxbackBw">{random:fanart}</path>
		<path ifSubset="t22:boxback|boxbackBw">{random:boxback}</path>

		<default ifSubset="t22:marquee|marqueeBw">./defaultMarquee.png</default>
		<path ifSubset="t22:marquee|marqueeBw">{random:marquee}</path>

		<path ifSubset="t22:custom|customBw">{random:fanart}</path>
		<path ifSubset="t22:custom|customBw">${path.customIn}/tiles/${system.theme}/22.png</path>
		<path ifSubset="t22:custom|customBw">${path.customOut}/tiles/${system.theme}/22.png</path>
		<path ifSubset="t22:custom|customBw">${path.customIn}/tiles/${system.theme}/22.jpg</path>
		<path ifSubset="t22:custom|customBw">${path.customOut}/tiles/${system.theme}/22.jpg</path>
		
		<saturation ifSubset="t22:imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
	</image>

	<image name="22b" extra="true" ifSubset="t22:marquee|marqueeBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">

		<visible ifSubset="t22:themeInclude">false</visible>

		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<zIndex>${stbi}</zIndex>
		<path>./22.png</path>
		<pos>${p.22}</pos>
		<minSize>${s.22}</minSize>
		<saturation ifSubset="t22:marqueeBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
	</image>

	<video name="v22" extra="true" ifSubset="t22:video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">

		<visible ifSubset="t22:themeInclude">false</visible>

		<delay>0.1</delay>
		<effect>none</effect>
		<origin>0.5 0.5</origin>
		<pos>${p.22}</pos>
		<minSize>${s.22}</minSize>
		<zIndex>${sti}</zIndex>
		<audio ifSubset="t22:video|videoBw|videoCustom|videoCustomBw">false</audio>
		<saturation ifSubset="t22:videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>

		<path>{random}</path>

		<path ifSubset="t22:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/22.mp4</path>
		<path ifSubset="t22:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/22.mp4</path>
	</video>
</view>

</theme>
