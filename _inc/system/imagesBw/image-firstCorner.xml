<theme>
<formatVersion>7</formatVersion>

	<include>./../comicsBw/comic-firstCorner.xml</include>

<view name="system">

	<image name="image.firstCorner" extra="true">
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<minSize>${s.firstCorner}</minSize>
		<pos>${p.firstCorner}</pos>
		<color>${tintTiles}</color>
		<zIndex>${ti}</zIndex>
		<saturation>0</saturation>

		<default>./../../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.png</default>
		<default>./../../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.jpg</default>
		<default>./${path.windows}/../../../../../_comicScrapV2Custom/${system.theme}/default/firstCorner.png</default>
		<default>./${path.windows}/../../../../../_comicScrapV2Custom/${system.theme}/default/firstCorner.jpg</default>

		<path>{random:image}</path>

		<path ifSubset="forceCustoms:yes">./../../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.png</path>
		<path ifSubset="forceCustoms:yes">./../../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.jpg</path>
		<path ifSubset="forceCustoms:yes">./${path.windows}/../../../../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.png</path>
		<path ifSubset="forceCustoms:yes">./${path.windows}/../../../../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.jpg</path>
	</image>

</view>

</theme>
