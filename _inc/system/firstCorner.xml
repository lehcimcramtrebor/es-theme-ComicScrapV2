<theme>
<formatVersion>7</formatVersion>

<view name="system" ifSubset="groupTiles:firstCorner|upperCorners|crossedCorners">

	<image name="firstCorner" extra="true" ifSubset="firstCornerSource:image|thumbnail|fanart|marquee|boxback|custom|imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw|pinkComic|blueComic|redComic|yellowComic|greenComic|purpleComic|fireComic">
		<linearSmooth>true</linearSmooth>

		<origin>0.5 0.5</origin>

		<minSize ifSubset="firstCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw|pinkComic|blueComic|redComic|yellowComic|greenComic|purpleComic|fireComic">${s.firstCorner}</minSize>
		<maxSize ifSubset="firstCornerSource:marquee|marqueeBw">${s.firstCorner}</maxSize>

		<pos>${p.firstCorner}</pos>

		<scale ifSubset="firstCornerSource:marquee|marqueeBw">0.8</scale>

		<zIndex>${mti}</zIndex>

		<default ifSubset="firstCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./../../_comicScrapV2Custom/tiles/default/firstCorner.png</default>
		<default ifSubset="firstCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./../../_comicScrapV2Custom/tiles/default/firstCorner.jpg</default>
		<default ifSubset="firstCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/default/firstCorner.png</default>
		<default ifSubset="firstCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/default/firstCorner.jpg</default>

		<path ifSubset="firstCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./../../_comicScrapV2Custom/tiles/default/firstCorner.png</path>
		<path ifSubset="firstCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./../../_comicScrapV2Custom/tiles/default/firstCorner.jpg</path>
		<path ifSubset="firstCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/default/firstCorner.png</path>
		<path ifSubset="firstCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/default/firstCorner.jpg</path>

		<default ifSubset="firstCornerSource:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.png</default>
		<default ifSubset="firstCornerSource:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.jpg</default>
		<default ifSubset="firstCornerSource:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.png</default>
		<default ifSubset="firstCornerSource:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.jpg</default>
		<path ifSubset="firstCornerSource:image|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">{random:image}</path>

		<path ifSubset="firstCornerSource:thumbnail|thumbnailBw">{random:thumbnail}</path>

		<path ifSubset="firstCornerSource:fanart|fanartBw">{random:fanart}</path>

		<path ifSubset="firstCornerSource:boxback|boxbackBw">{random:fanart}</path>
		<path ifSubset="firstCornerSource:boxback|boxbackBw">{random:boxback}</path>

		<default ifSubset="firstCornerSource:marquee|marqueeBw">./defaultMarquee.png</default>
		<path ifSubset="firstCornerSource:marquee|marqueeBw">{random:marquee}</path>

		<path ifSubset="firstCornerSource:custom|customBw">{random:fanart}</path>
		<path ifSubset="firstCornerSource:custom|customBw">./../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.png</path>
		<path ifSubset="firstCornerSource:custom|customBw">./../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.jpg</path>
		<path ifSubset="firstCornerSource:custom|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.png</path>
		<path ifSubset="firstCornerSource:custom|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.jpg</path>

		<path ifSubset="firstCornerSource:pinkComic">./medPink.png</path>
		<path ifSubset="firstCornerSource:blueComic">./medBlue.png</path>
		<path ifSubset="firstCornerSource:redComic">./medRed.png</path>
		<path ifSubset="firstCornerSource:yellowComic">./medYellow.png</path>
		<path ifSubset="firstCornerSource:greenComic">./medGreen.png</path>
		<path ifSubset="firstCornerSource:purpleComic">./medPurple.png</path>
		<path ifSubset="firstCornerSource:fireComic">./medFire.png</path>

		<path ifSubset="forceCustomTiles:yes">./../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.png</path>
		<path ifSubset="forceCustomTiles:yes">./../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.jpg</path>
		<path ifSubset="forceCustomTiles:yes">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.png</path>
		<path ifSubset="forceCustomTiles:yes">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.jpg</path>
		
		<saturation ifSubset="firstCornerSource:imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
		<color>${tintTiles}</color>
	</image>

	<image name="firstCornerb" extra="true" ifSubset="firstCornerSource:marquee|marqueeBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<zIndex>${mtbi}</zIndex>
		<path>./firstCorner.png</path>
		<pos>${p.firstCorner}</pos>
		<minSize>${s.firstCorner}</minSize>
		<saturation ifSubset="firstCornerSource:marqueeBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
		<color>${tintTiles}</color>
	</image>

	<video name="vfirstCorner" extra="true" ifSubset="firstCornerSource:video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<delay>0.1</delay>
		<effect>none</effect>
		<origin>0.5 0.5</origin>
		<pos>${p.firstCorner}</pos>
		<minSize>${s.firstCorner}</minSize>
		<zIndex>${mti}</zIndex>
		<audio ifSubset="firstCornerSource:video|videoBw|videoCustom|videoCustomBw">false</audio>
		<saturation ifSubset="firstCornerSource:videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>

		<path>{random}</path>

		<path ifSubset="firstCornerSource:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.mp4</path>
		<path ifSubset="firstCornerSource:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.mp4</path>
		<color>${tintTiles}</color>
	</video>
</view>

</theme>
