		<maxSize ifSubset="t23:marquee|marqueeBw">${s.23}</maxSize>

		<pos>${p.23}</pos>

		<scale ifSubset="t23:marquee|marqueeBw">0.8</scale>

		<zIndex>${sti}</zIndex>

		<default ifSubset="t23:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/23.png</default>
		<default ifSubset="t23:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/23.png</default>
		<default ifSubset="t23:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/23.jpg</default>
		<default ifSubset="t23:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/23.jpg</default>

		<path ifSubset="t23:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/23.png</path>
		<path ifSubset="t23:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/23.png</path>
		<path ifSubset="t23:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/23.jpg</path>
		<path ifSubset="t23:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/23.jpg</path>

		<default ifSubset="t23:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/23.png</default>
		<default ifSubset="t23:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/23.png</default>
		<default ifSubset="t23:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/23.jpg</default>
		<default ifSubset="t23:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/23.jpg</default>
		<path ifSubset="t23:image|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">{random:image}</path>

		<path ifSubset="t23:thumbnail|thumbnailBw">{random:thumbnail}</path>

		<path ifSubset="t23:fanart|fanartBw">{random:fanart}</path>

		<path ifSubset="t23:boxback|boxbackBw">{random:fanart}</path>
		<path ifSubset="t23:boxback|boxbackBw">{random:boxback}</path>

		<default ifSubset="t23:marquee|marqueeBw">./defaultMarquee.png</default>
		<path ifSubset="t23:marquee|marqueeBw">{random:marquee}</path>

		<path ifSubset="t23:custom|customBw">{random:fanart}</path>
		<path ifSubset="t23:custom|customBw">${path.customIn}/tiles/${system.theme}/23.png</path>
		<path ifSubset="t23:custom|customBw">${path.customOut}/tiles/${system.theme}/23.png</path>
		<path ifSubset="t23:custom|customBw">${path.customIn}/tiles/${system.theme}/23.jpg</path>
		<path ifSubset="t23:custom|customBw">${path.customOut}/tiles/${system.theme}/23.jpg</path>

		<path ifSubset="t23:pinkComic">./11.png</path>
		<path ifSubset="t23:blueComic">./12.png</path>
		<path ifSubset="t23:redComic">./13.png</path>
		<path ifSubset="t23:yellowComic">./14.png</path>
		<path ifSubset="t23:greenComic">./22.png</path>
		<path ifSubset="t23:purpleComic">./21.png</path>
		<path ifSubset="t23:fireComic">./23.png</path>
		
		<saturation ifSubset="t23:imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
	</image>

	<image name="23b" extra="true" ifSubset="t23:marquee|marqueeBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<zIndex>${stbi}</zIndex>
		<path>./23.png</path>
		<pos>${p.23}</pos>
		<minSize>${s.23}</minSize>
		<saturation ifSubset="t23:marqueeBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
	</image>

	<video name="v23" extra="true" ifSubset="t23:video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<delay>0.1</delay>
		<effect>none</effect>
		<origin>0.5 0.5</origin>
		<pos>${p.23}</pos>
		<minSize>${s.23}</minSize>
		<zIndex>${sti}</zIndex>
		<audio ifSubset="t23:video|videoBw|videoCustom|videoCustomBw">false</audio>
		<saturation ifSubset="t23:videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>

		<path>{random}</path>

		<path ifSubset="t23:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/23.mp4</path>
		<path ifSubset="t23:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/23.mp4</path>
	</video>
</view>

