<theme>
<formatVersion>7</formatVersion>

<view name="system" ifSubset="groupTiles:no|firstCorner|thirdCorner">

	<image name="23" extra="true" ifSubset="t23:image|thumbnail|fanart|marquee|boxback|custom|imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw|pinkComic|blueComic|redComic|yellowComic|greenComic|purpleComic|fireComic">
