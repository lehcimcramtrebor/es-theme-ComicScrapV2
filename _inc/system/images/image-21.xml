<theme>
<formatVersion>7</formatVersion>

	<include>./../comics/comic-21.xml</include>

<view name="system">

	<image name="image.21" extra="true">
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<minSize>${s.21}</minSize>
		<pos>${p.21}</pos>
		<color>${tintTiles}</color>
		<zIndex>${ti}</zIndex>

		<default>./../../../_comicScrapV2Custom/tiles/${system.theme}/21.png</default>
		<default>./../../../_comicScrapV2Custom/tiles/${system.theme}/21.jpg</default>
		<default>./${path.windows}/../../../../../_comicScrapV2Custom/${system.theme}/default/21.png</default>
		<default>./${path.windows}/../../../../../_comicScrapV2Custom/${system.theme}/default/21.jpg</default>

		<path>{random:image}</path>

		<path ifSubset="forceCustoms:yes">./../../../_comicScrapV2Custom/tiles/${system.theme}/21.png</path>
		<path ifSubset="forceCustoms:yes">./../../../_comicScrapV2Custom/tiles/${system.theme}/21.jpg</path>
		<path ifSubset="forceCustoms:yes">./${path.windows}/../../../../../_comicScrapV2Custom/tiles/${system.theme}/21.png</path>
		<path ifSubset="forceCustoms:yes">./${path.windows}/../../../../../_comicScrapV2Custom/tiles/${system.theme}/21.jpg</path>

		<opacity>0</opacity>
		<storyboard repeatAt="10000">
			<animation property="opacity" from="1" to="1" duration="9250" mode="linear"/>
			<animation property="opacity" from="1" to="0" duration="250" mode="linear" begin="9250"/>
			<animation property="opacity" from="0" to="1" duration="250" mode="linear" begin="10500"/>
			<animation property="opacity" from="1" to="0" duration="250" mode="linear" begin="19500"/>
			<animation property="scale" from="1" to="1" duration="10000" mode="linear"/>
			<animation property="scale" from="1" to="1" duration="10000" mode="linear" begin="10000"/>
		</storyboard>
	</image>

</view>

</theme>
