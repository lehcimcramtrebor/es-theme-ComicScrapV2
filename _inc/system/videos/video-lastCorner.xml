<theme>
<formatVersion>7</formatVersion>

	<include>./../comics/comic-lastCorner.xml</include>

<view name="system">

	<video name="video.lastCorner" extra="true">
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<minSize>${s.lastCorner}</minSize>
		<pos>${p.lastCorner}</pos>
		<color>${tintTiles}</color>
		<zIndex>${ti}</zIndex>
		<delay>0.6</delay>
		<effect>none</effect>
		<audio>false</audio>

		<path>{random}</path>

		<path>./../../../_comicScrapV2Custom/tiles/${system.theme}/lastCorner.mp4</path>
		<path>./${path.windows}/../../../../../_comicScrapV2Custom/tiles/${system.theme}/lastCorner.mp4</path>
	</video>

</view>

</theme>
