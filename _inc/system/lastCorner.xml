<theme>
<formatVersion>7</formatVersion>

<view name="system" ifSubset="groupTiles:lastCorner|bottomCorners|crossedCorners">

	<image name="lastCorner" extra="true" ifSubset="lastCornerSource:image|thumbnail|fanart|marquee|boxback|custom|imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw|pinkComic|blueComic|redComic|yellowComic|greenComic|purpleComic|fireComic">
		<linearSmooth>true</linearSmooth>

		<origin>0.5 0.5</origin>

		<minSize ifSubset="lastCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw|pinkComic|blueComic|redComic|yellowComic|greenComic|purpleComic|fireComic">${s.lastCorner}</minSize>
		<maxSize ifSubset="lastCornerSource:marquee|marqueeBw">${s.lastCorner}</maxSize>

		<pos>${p.lastCorner}</pos>

		<scale ifSubset="lastCornerSource:marquee|marqueeBw">0.8</scale>

		<zIndex>${mti}</zIndex>

		<default ifSubset="lastCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./../../_comicScrapV2Custom/tiles/default/lastCorner.png</default>
		<default ifSubset="lastCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./../../_comicScrapV2Custom/tiles/default/lastCorner.jpg</default>
		<default ifSubset="lastCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/default/lastCorner.png</default>
		<default ifSubset="lastCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/default/lastCorner.jpg</default>

		<path ifSubset="lastCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./../../_comicScrapV2Custom/tiles/default/lastCorner.png</path>
		<path ifSubset="lastCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./../../_comicScrapV2Custom/tiles/default/lastCorner.jpg</path>
		<path ifSubset="lastCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/default/lastCorner.png</path>
		<path ifSubset="lastCornerSource:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/default/lastCorner.jpg</path>

		<default ifSubset="lastCornerSource:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./../../_comicScrapV2Custom/tiles/${system.theme}/lastCorner.png</default>
		<default ifSubset="lastCornerSource:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./../../_comicScrapV2Custom/tiles/${system.theme}/lastCorner.jpg</default>
		<default ifSubset="lastCornerSource:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/lastCorner.png</default>
		<default ifSubset="lastCornerSource:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/lastCorner.jpg</default>
		<path ifSubset="lastCornerSource:image|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">{random:image}</path>

		<path ifSubset="lastCornerSource:thumbnail|thumbnailBw">{random:thumbnail}</path>

		<path ifSubset="lastCornerSource:fanart|fanartBw">{random:fanart}</path>

		<path ifSubset="lastCornerSource:boxback|boxbackBw">{random:fanart}</path>
		<path ifSubset="lastCornerSource:boxback|boxbackBw">{random:boxback}</path>

		<default ifSubset="lastCornerSource:marquee|marqueeBw">./defaultMarquee.png</default>
		<path ifSubset="lastCornerSource:marquee|marqueeBw">{random:marquee}</path>

		<path ifSubset="lastCornerSource:custom|customBw">{random:fanart}</path>
		<path ifSubset="lastCornerSource:custom|customBw">./../../_comicScrapV2Custom/tiles/${system.theme}/lastCorner.png</path>
		<path ifSubset="lastCornerSource:custom|customBw">./../../_comicScrapV2Custom/tiles/${system.theme}/lastCorner.jpg</path>
		<path ifSubset="lastCornerSource:custom|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/lastCorner.png</path>
		<path ifSubset="lastCornerSource:custom|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/lastCorner.jpg</path>

		<path ifSubset="lastCornerSource:pinkComic">./medPink.png</path>
		<path ifSubset="lastCornerSource:blueComic">./medBlue.png</path>
		<path ifSubset="lastCornerSource:redComic">./medRed.png</path>
		<path ifSubset="lastCornerSource:yellowComic">./medYellow.png</path>
		<path ifSubset="lastCornerSource:greenComic">./medGreen.png</path>
		<path ifSubset="lastCornerSource:purpleComic">./medPurple.png</path>
		<path ifSubset="lastCornerSource:fireComic">./medFire.png</path>
		
		<saturation ifSubset="lastCornerSource:imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
		<color>${tintTiles}</color>
	</image>

	<image name="lastCornerb" extra="true" ifSubset="lastCornerSource:marquee|marqueeBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<zIndex>${mtbi}</zIndex>
		<path>./lastCorner.png</path>
		<pos>${p.lastCorner}</pos>
		<minSize>${s.lastCorner}</minSize>
		<saturation ifSubset="lastCornerSource:marqueeBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
		<color>${tintTiles}</color>
	</image>

	<image name="lastCornerc" extra="true" ifSubset="forceCustoms:yes">
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<zIndex>${mti}</zIndex>
		<pos>${p.lastCorner}</pos>
		<minSize>${s.lastCorner}</minSize>
		<saturation ifSubset="lastCornerSource:imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
		<color>${tintTiles}</color>
		<path>./../../_comicScrapV2Custom/tiles/${system.theme}/lastCorner.png</path>
		<path>./../../_comicScrapV2Custom/tiles/${system.theme}/lastCorner.jpg</path>
		<path>./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/lastCorner.png</path>
		<path>./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/lastCorner.jpg</path>
	</image>

	<video name="vlastCorner" extra="true" ifSubset="lastCornerSource:video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<delay>0.1</delay>
		<effect>none</effect>
		<origin>0.5 0.5</origin>
		<pos>${p.lastCorner}</pos>
		<minSize>${s.lastCorner}</minSize>
		<zIndex>${mti}</zIndex>
		<audio ifSubset="lastCornerSource:video|videoBw|videoCustom|videoCustomBw">false</audio>
		<saturation ifSubset="lastCornerSource:videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>

		<path>{random}</path>

		<path ifSubset="lastCornerSource:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./../../_comicScrapV2Custom/tiles/${system.theme}/lastCorner.mp4</path>
		<path ifSubset="lastCornerSource:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/lastCorner.mp4</path>
		<color>${tintTiles}</color>
	</video>
</view>

</theme>
