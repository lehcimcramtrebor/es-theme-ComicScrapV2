<theme>
<formatVersion>7</formatVersion>

	<include>./../images/image-firstCorner.xml</include>

<view name="system">

	<video name="video.firstCorner" extra="true">
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<minSize>${s.firstCorner}</minSize>
		<pos>${p.firstCorner}</pos>
		<color>${tintTiles}</color>
		<zIndex>${vti}</zIndex>
		<delay>0.6</delay>
		<effect>none</effect>
		<audio>true</audio>
		<saturation>1.3</saturation>

		<path>{random}</path>

		<path>./../../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.mp4</path>
		<path>./${path.windows}/../../../../../_comicScrapV2Custom/tiles/${system.theme}/firstCorner.mp4</path>
	</video>

</view>

</theme>
