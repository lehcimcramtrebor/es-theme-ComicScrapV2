<theme>
<formatVersion>7</formatVersion>

<view name="system" ifSubset="groupTiles:no|firstCorner|secondCorner|thirdCorner|upperCorners|crossedCornersInverse">

	<image name="33" extra="true" ifSubset="t33:image|thumbnail|fanart|marquee|boxback|custom|imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw|pinkComic|blueComic|redComic|yellowComic|greenComic|purpleComic|fireComic">
		<linearSmooth>true</linearSmooth>

		<origin>0.5 0.5</origin>

		<minSize ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw|pinkComic|blueComic|redComic|yellowComic|greenComic|purpleComic|fireComic">${s.33}</minSize>
		<maxSize ifSubset="t33:marquee|marqueeBw">${s.33}</maxSize>

		<pos>${p.33}</pos>

		<scale ifSubset="t33:marquee|marqueeBw">0.8</scale>

		<zIndex>${sti}</zIndex>

		<default ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./../../_comicScrapV2Custom/tiles/default/33.png</default>
		<default ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./../../_comicScrapV2Custom/tiles/default/33.jpg</default>
		<default ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/default/33.png</default>
		<default ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/default/33.jpg</default>

		<path ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./../../_comicScrapV2Custom/tiles/default/33.png</path>
		<path ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./../../_comicScrapV2Custom/tiles/default/33.jpg</path>
		<path ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/default/33.png</path>
		<path ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/default/33.jpg</path>

		<default ifSubset="t33:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./../../_comicScrapV2Custom/tiles/${system.theme}/33.png</default>
		<default ifSubset="t33:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./../../_comicScrapV2Custom/tiles/${system.theme}/33.jpg</default>
		<default ifSubset="t33:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/33.png</default>
		<default ifSubset="t33:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/33.jpg</default>
		<path ifSubset="t33:image|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">{random:image}</path>

		<path ifSubset="t33:thumbnail|thumbnailBw">{random:thumbnail}</path>

		<path ifSubset="t33:fanart|fanartBw">{random:fanart}</path>

		<path ifSubset="t33:boxback|boxbackBw">{random:fanart}</path>
		<path ifSubset="t33:boxback|boxbackBw">{random:boxback}</path>

		<default ifSubset="t33:marquee|marqueeBw">./defaultMarquee.png</default>
		<path ifSubset="t33:marquee|marqueeBw">{random:marquee}</path>

		<path ifSubset="t33:custom|customBw">{random:fanart}</path>
		<path ifSubset="t33:custom|customBw">./../../_comicScrapV2Custom/tiles/${system.theme}/33.png</path>
		<path ifSubset="t33:custom|customBw">./../../_comicScrapV2Custom/tiles/${system.theme}/33.jpg</path>
		<path ifSubset="t33:custom|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/33.png</path>
		<path ifSubset="t33:custom|customBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/33.jpg</path>

		<path ifSubset="t33:pinkComic">./11.png</path>
		<path ifSubset="t33:blueComic">./12.png</path>
		<path ifSubset="t33:redComic">./13.png</path>
		<path ifSubset="t33:yellowComic">./14.png</path>
		<path ifSubset="t33:greenComic">./22.png</path>
		<path ifSubset="t33:purpleComic">./21.png</path>
		<path ifSubset="t33:fireComic">./23.png</path>
		
		<saturation ifSubset="t33:imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
		<color>${tintTiles}</color>

		<opacity ifSubset="t33:marquee|marqueeBw">0</opacity>
		<storyboard repeat="forever" ifSubset="t33:marquee|marqueeBw">
			<animation property="opacity" from="0" to="0" duration="400" mode="linear"/>
			<animation property="opacity" from="0" to="1" duration="350" mode="linear" begin="400"/>
			<animation property="opacity" from="1" to="0" duration="350" mode="linear" begin="9350"/>
			<animation property="scale" from="0.8" to="0.8" duration="10000" mode="linear"/>
		</storyboard>
	</image>

	<image name="33b" extra="true" ifSubset="t33:marquee|marqueeBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<zIndex>${stbi}</zIndex>
		<path>./33.png</path>
		<pos>${p.33}</pos>
		<minSize>${s.33}</minSize>
		<saturation ifSubset="t33:marqueeBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
		<color>${tintTiles}</color>
	</image>

	<video name="v33" extra="true" ifSubset="t33:video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<delay>0.1</delay>
		<effect>none</effect>
		<origin>0.5 0.5</origin>
		<pos>${p.33}</pos>
		<minSize>${s.33}</minSize>
		<zIndex>${sti}</zIndex>
		<audio ifSubset="t33:video|videoBw|videoCustom|videoCustomBw">false</audio>
		<saturation ifSubset="t33:videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>

		<path>{random}</path>

		<path ifSubset="t33:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./../../_comicScrapV2Custom/tiles/${system.theme}/33.mp4</path>
		<path ifSubset="t33:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">./${path.windows}/../../../../_comicScrapV2Custom/tiles/${system.theme}/33.mp4</path>
		<color>${tintTiles}</color>
	</video>
</view>

</theme>
