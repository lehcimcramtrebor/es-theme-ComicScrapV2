version: 2.0
author: Lehcim Cram Trebor
inspired by ComicBook theme by TMNTturtleguy at https://github.com/TMNTturtleguy/es-theme-ComicBook
-->

<theme>
<formatVersion>7</formatVersion>

<view name="system" ifSubset="groupTiles:no|firstCorner|secondCorner|thirdCorner|upperCorners|crossedCornersInverse">

	<image name="33" extra="true" ifSubset="t33:image|thumbnail|fanart|marquee|boxback|custom|imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<linearSmooth>true</linearSmooth>

		<origin>0.5 0.5</origin>

		<minSize ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${s.33}</minSize>
		<maxSize ifSubset="t33:marquee|marqueeBw">${s.33}</maxSize>

		<pos>${p.33}</pos>

		<scale ifSubset="t33:marquee|marqueeBw">0.8</scale>

		<zIndex>${sti}</zIndex>

		<default ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/33.png</default>
		<default ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/33.png</default>
		<default ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/33.jpg</default>
		<default ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/33.jpg</default>

		<path ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/33.png</path>
		<path ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/33.png</path>
		<path ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customIn}/tiles/default/33.jpg</path>
		<path ifSubset="t33:image|thumbnail|fanart|boxback|custom|imageBw|thumbnailBw|fanartBw|boxbackBw|customBw">${path.customOut}/tiles/default/33.jpg</path>

		<default ifSubset="t33:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/33.png</default>
		<default ifSubset="t33:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/33.png</default>
		<default ifSubset="t33:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/33.jpg</default>
		<default ifSubset="t33:image|thumbnail|thumbnailBw|boxback|boxbackBw|fanart|fanartBw|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/33.jpg</default>
		<path ifSubset="t33:image|imageBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">{random:image}</path>

		<path ifSubset="t33:thumbnail|thumbnailBw">{random:thumbnail}</path>

		<path ifSubset="t33:fanart|fanartBw">{random:fanart}</path>

		<path ifSubset="t33:boxback|boxbackBw">{random:fanart}</path>
		<path ifSubset="t33:boxback|boxbackBw">{random:boxback}</path>

		<default ifSubset="t33:marquee|marqueeBw">./defaultMarquee.png</default>
		<path ifSubset="t33:marquee|marqueeBw">{random:marquee}</path>

		<path ifSubset="t33:custom|customBw">{random:fanart}</path>
		<path ifSubset="t33:custom|customBw">${path.customIn}/tiles/${system.theme}/33.png</path>
		<path ifSubset="t33:custom|customBw">${path.customOut}/tiles/${system.theme}/33.png</path>
		<path ifSubset="t33:custom|customBw">${path.customIn}/tiles/${system.theme}/33.jpg</path>
		<path ifSubset="t33:custom|customBw">${path.customOut}/tiles/${system.theme}/33.jpg</path>
		
		<saturation ifSubset="t33:imageBw|thumbnailBw|fanartBw|marqueeBw|boxbackBw|customBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
	</image>

	<image name="33b" extra="true" ifSubset="t33:marquee|marqueeBw|video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<zIndex>${stbi}</zIndex>
		<path>./33.png</path>
		<pos>${p.33}</pos>
		<minSize>${s.33}</minSize>
		<saturation ifSubset="t33:marqueeBw|videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>
	</image>

	<video name="v33" extra="true" ifSubset="t33:video|videoBw|videoAudio|videoAudioBw|videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">
		<delay>0.1</delay>
		<effect>none</effect>
		<origin>0.5 0.5</origin>
		<pos>${p.33}</pos>
		<minSize>${s.33}</minSize>
		<zIndex>${sti}</zIndex>
		<audio ifSubset="t33:video|videoBw|videoCustom|videoCustomBw">false</audio>
		<saturation ifSubset="t33:videoBw|videoAudioBw|videoCustomBw|videoCustomAudioBw">0</saturation>

		<path>{random}</path>

		<path ifSubset="t33:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customIn}/tiles/${system.theme}/33.mp4</path>
		<path ifSubset="t33:videoCustom|videoCustomBw|videoCustomAudio|videoCustomAudioBw">${path.customOut}/tiles/${system.theme}/33.mp4</path>
	</video>
</view>

</theme>
