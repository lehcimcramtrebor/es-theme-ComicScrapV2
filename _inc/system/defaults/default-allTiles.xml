<theme>
<formatVersion>7</formatVersion>

<view name="system">

	<image name="default.allTiles" extra="true">
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<minSize>${s.allTiles}</minSize>
		<pos>${p.allTiles}</pos>
		<color>${tintTiles}</color>
		<zIndex>${di}</zIndex>
		<path>./../../../_comicScrapV2Custom/tiles/default/allTiles.png</path>
		<path>./../../../_comicScrapV2Custom/tiles/default/allTiles.jpg</path>
		<path>./${path.windows}/../../../../../_comicScrapV2Custom/tiles/default/allTiles.png</path>
		<path>./${path.windows}/../../../../../_comicScrapV2Custom/tiles/default/allTiles.jpg</path>

		<path ifSubset="forceCustoms:yes|forceJustDefaults|forceAllExceptImages|forceAllExceptFanarts|forceAllExceptThumbnailsFull">./../../../_comicScrapV2Custom/tiles/${system.theme}/allTiles.png</path>
		<path ifSubset="forceCustoms:yes|forceJustDefaults|forceAllExceptImages|forceAllExceptFanarts|forceAllExceptThumbnailsFull">./../../../_comicScrapV2Custom/tiles/${system.theme}/allTiles.jpg</path>
		<path ifSubset="forceCustoms:yes|forceJustDefaults|forceAllExceptImages|forceAllExceptFanarts|forceAllExceptThumbnailsFull">./${path.windows}/../../../../../_comicScrapV2Custom/tiles/${system.theme}/allTiles.png</path>
		<path ifSubset="forceCustoms:yes|forceJustDefaults|forceAllExceptImages|forceAllExceptFanarts|forceAllExceptThumbnailsFull">./${path.windows}/../../../../../_comicScrapV2Custom/tiles/${system.theme}/allTiles.jpg</path>
	</image>

</view>

</theme>
