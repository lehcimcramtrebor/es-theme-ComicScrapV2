<theme>
<formatVersion>7</formatVersion>

	<include>./../comics/comic-allTiles.xml</include>

<view name="system">

	<image name="fanart.allTiles" extra="true">
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>
		<minSize>${s.allTiles}</minSize>
		<pos>${p.allTiles}</pos>
		<color>${tintTiles}</color>
		<zIndex>${ti}</zIndex>

		<default>./../../../_comicScrapV2Custom/tiles/${system.theme}/allTiles.png</default>
		<default>./../../../_comicScrapV2Custom/tiles/${system.theme}/allTiles.jpg</default>
		<default>./${path.windows}/../../../../../_comicScrapV2Custom/${system.theme}/default/allTiles.png</default>
		<default>./${path.windows}/../../../../../_comicScrapV2Custom/${system.theme}/default/allTiles.jpg</default>

		<path>{random:fanart}</path>

		<path ifSubset="forceCustoms:yes">./../../../_comicScrapV2Custom/tiles/${system.theme}/allTiles.png</path>
		<path ifSubset="forceCustoms:yes">./../../../_comicScrapV2Custom/tiles/${system.theme}/allTiles.jpg</path>
		<path ifSubset="forceCustoms:yes">./${path.windows}/../../../../../_comicScrapV2Custom/tiles/${system.theme}/allTiles.png</path>
		<path ifSubset="forceCustoms:yes">./${path.windows}/../../../../../_comicScrapV2Custom/tiles/${system.theme}/allTiles.jpg</path>
	</image>

</view>

</theme>
