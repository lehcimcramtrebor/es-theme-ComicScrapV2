<theme>
<formatVersion>7</formatVersion>

<view name="system,basic,detailed,grid,gamecarousel">
	<image name="maskAll" extra="true">
		<path>./../white.png</path>
		<size>1 1</size>
		<color>202020</color>
		<zIndex>99</zIndex>
	</image>
	<image name="overlay" extra="true">
		<linearSmooth>true</linearSmooth>
		<size>1 1</size>
		<zIndex>1000</zIndex>
	</image>
	<image name="overlayBack" extra="true">
		<linearSmooth>true</linearSmooth>
		<size>1 1</size>
		<zIndex>100</zIndex>
	</image>
	<image name="overlay,overlayBack" extra="true">
		<color>${tint}</color>
	</image>
	<image name="tintBehindOverlay" extra="true">
		<linearSmooth>true</linearSmooth>
		<tile>true</tile>
		<path>./paperTint.png</path>
		<size>0.9760416666666667 0.9759259259259259</size>
		<pos>0.0130208333333333 0.012037037037037</pos>
		<zIndex>999</zIndex>
		<color>${tint}</color>
		<opacity>0.2</opacity>
	</image>
	<image name="paper" extra="true">
		<linearSmooth>true</linearSmooth>
		<path>./paper.png</path>
		<tile>true</tile>
		<size>0.9760416666666667 0.9759259259259259</size>
		<pos>0.0130208333333333 0.012037037037037</pos>
		<zIndex>5000</zIndex>
		<color>0000001a</color>
		<opacity>0.85</opacity>
	</image>
</view>

<view name="system">
	<image name="overlay" extra="true">
		<path>./system.png</path>
	</image>
	<image name="overlayBack" extra="true">
		<origin ifSubset="t22:pinkComic|blueComic|redComic|yellowComic|greenComic|purpleComic|fireComic|themeInclude">0.5 0.5</origin>
		<size ifSubset="t22:pinkComic|blueComic|redComic|yellowComic|greenComic|purpleComic|fireComic|themeInclude">${s.22}</size>
		<pos ifSubset="t22:pinkComic|blueComic|redComic|yellowComic|greenComic|purpleComic|fireComic|themeInclude">${p.22}</pos>
		<path ifSubset="t22:pinkComic">./../system/11.png</path>
		<path ifSubset="t22:blueComic">./../system/12.png</path>
		<path ifSubset="t22:redComic">./../system/13.png</path>
		<path ifSubset="t22:yellowComic">./../system/14.png</path>
		<path ifSubset="t22:greenComic">./../system/22.png</path>
		<path ifSubset="t22:purpleComic">./../system/21.png</path>
		<path ifSubset="t22:fireComic">./../system/23.png</path>
		<path ifSubset="t22:themeInclude">./../../_comicScrapV2Custom/tiles/_customCenter.png</path>
		<path ifSubset="t22:themeInclude">./../../_comicScrapV2Custom/tiles/_customCenter.jpg</path>
		<path ifSubset="t22:themeInclude">./${path.windows}/../../../../_comicScrapV2Custom/tiles/_customCenter.png</path>
		<path ifSubset="t22:themeInclude">./${path.windows}/../../../../_comicScrapV2Custom/tiles/_customCenter.jpg</path>

		<zIndex>800</zIndex>
		<visible ifSubset="groupTiles:allTiles,t22:emptyTile">false</visible>
	</image>
</view>

<view name="basic">
	<image name="overlay" extra="true">
		<path>./basic.png</path>
	</image>
	<image name="overlayBack" extra="true">
		<path>./basicBack.png</path>
	</image>
</view>

<view name="detailed,gamecarousel">
	<image name="overlay" extra="true">
		<path>./detailed.png</path>
	</image>
	<image name="overlayBack" extra="true">
		<path>./detailedBack.png</path>
	</image>
</view>

<view name="grid">
	<image name="overlay" extra="true">
		<path>./grid.png</path>
	</image>
	<image name="overlayBack" extra="true">
		<path>./gridBack.png</path>
	</image>
</view>

<customView name="library" inherits="detailed" displayName="${lang.library}">>
	<image name="overlay" extra="true">
		<path>./library.png</path>
	</image>
	<image name="overlayBack" extra="true">
		<path>./libraryBack.png</path>
	</image>
</customView>

</theme>
